<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_option_text"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/option_sub_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_option_sub_1_title"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/option_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"/>

    <RadioGroup
        android:id="@+id/radio_group_1"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/option_sub_1_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/radio_type_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="개별 선택"
        android:textColor="#757575" />

    <RadioButton
        android:id="@+id/radio_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="전체 선택"
        android:textColor="#757575"/>
    </RadioGroup>
    <CheckBox
        android:id="@+id/checkbox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="2단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <CheckBox
        android:id="@+id/checkbox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="3단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_2"/>


    <CheckBox
        android:id="@+id/checkbox_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="4단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_3"/>

    <CheckBox
        android:id="@+id/checkbox_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="5단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_4"/>


    <CheckBox
        android:id="@+id/checkbox_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="6단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_5"/>


    <CheckBox
        android:id="@+id/checkbox_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="7단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_6"/>


    <CheckBox
        android:id="@+id/checkbox_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="8단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_7"/>


    <CheckBox
        android:id="@+id/checkbox_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="9단"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/radio_group_1"
        app:layout_constraintStart_toEndOf="@id/checkbox_8"/>

    <Button
        android:id="@+id/complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="설정완료"
        android:textColor="#757575"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/option_sub_2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_option_sub_2_title"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_9"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>


    <include
        android:id="@+id/radio_group_2"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/option_sub_2_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/radiogroup_type_3" />

</androidx.constraintlayout.widget.ConstraintLayout>